#include <iostream>
using namespace std;
void tab()
{
    char tab[] = { 'a','b','c','r','x','z','g','w','u','2'};
    for (int i = 1; i <=10; i+=2) {
            cout << tab[i]<<endl;
        }
}
void exe()
{
    int tab[] = {3,4,5,6,7,80,4,2,3,67};
    for (int i = 1; i < 10; i=i+2) {
        cout << tab[i] << endl;
    }
}
void result() {
    double tab[] = { -3.4, -5.6, -1.2, 3.4, 5.9, 2.3, 6.4 };
    for (int i = 0; i < 7; i++) {
        cout << abs(tab[i]) << endl;
    }
}
void suma() {
    int numer[3][2] = { {1,2},{3,4},{5,6} };
    for (int i = 0; i < 3; i++) {
        for (int f = 0; f < 2; f++) {
            cout << numer[i][f] << " ";
        }
        cout << "\n";
    }
    cout << "+" << endl;
    int tab[3][2] = { {5,6},{2,3},{4,6} };
    for (int i = 0; i < 3; i++) {
        for (int f = 0; f < 2; f++) {
            cout << tab[i][f] << " ";
        }
        cout << "\n";
    }
    cout << "=" << endl;
    for (int e = 0; e < 3; e++) {
        for (int n = 0; n < 2; n++) {
            cout << numer[e][n] + tab[e][n] << " ";
        }
        cout << "\n";
    }
}
int main()
{
    //tab();
    //exe();
    //result();
    suma();  
}
